# AI FP&A Environment Configuration
# Copy to .env and fill in actual values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/nuvini_fpa
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_SECRETS_MANAGER_ENDPOINT=https://secretsmanager.us-east-1.amazonaws.com

# S3 Audit Logs
S3_AUDIT_BUCKET=nuvini-fpa-audit-logs
S3_RETENTION_YEARS=7

# Claude API
ANTHROPIC_API_KEY=sk-ant-your-api-key
CLAUDE_MODEL_DEFAULT=claude-sonnet-4-5
CLAUDE_MODEL_CRITICAL=claude-opus-4-6
CLAUDE_MODEL_SIMPLE=claude-haiku-4-5

# Redis / Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security
ENCRYPTION_KEY_ID=arn:aws:kms:us-east-1:123456789:key/your-kms-key
JWT_SECRET_KEY=your-jwt-secret-change-this
SESSION_SECRET=your-session-secret-change-this

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
STRUCTURED_LOGGING=true

# Portfolio Companies
COMPANY_EFFECTI_ID=uuid-effecti
COMPANY_MERCOS_ID=uuid-mercos
COMPANY_DATAHUB_ID=uuid-datahub
COMPANY_ONCLICK_ID=uuid-onclick
COMPANY_IPE_DIGITAL_ID=uuid-ipe
COMPANY_MUNDDI_ID=uuid-munddi
COMPANY_LEADLOVERS_ID=uuid-leadlovers

# ERP Credentials (stored in AWS Secrets Manager)
# Actual credentials NEVER stored in .env
ERP_CREDENTIALS_PREFIX=nuvini/

# BCB (Brazilian Central Bank) FX Rates
BCB_API_URL=https://olinda.bcb.gov.br/olinda/service/PTAX/version/v1/odata/

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_URL=http://localhost:3000

# Feature Flags
FEATURE_BLOCKCHAIN_AUDIT=false
FEATURE_REALTIME_CONSOLIDATION=false
FEATURE_ML_ANOMALY_DETECTION=false

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true
